<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.medicineproject.FindPasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_activity_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button_sumit_activity_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/linearLayout1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout1"
        android:layout_marginBottom="100dp"
        android:background="#199ED8"
        android:padding="10dp"
        android:text="@string/sumit"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView_find_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_activity_find_password"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/find_password"
        android:textColor="#000"

        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_sumit_activity_find_password"
        android:layout_below="@+id/TextView_find_password"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/ID"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_ID_activity_find_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:maxLength="11"
                android:background="@drawable/four_square"
                android:hint="@string/ID_hint"
                android:inputType="number"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/name"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_name_activity_find_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/four_square"
                android:hint="@string/name_hint"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/email"
                android:textColor="#000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText_email_activity_find_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/four_square"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
